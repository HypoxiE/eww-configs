; one main bar
(defwindow main_bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0px"
                      :width "100%"
                      :height "40px"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "4%")
  (main_bar))

(defwidget main_bar []
  (centerbox :orientation "h"
    :class "mainbox"
    (workspaces)
    (metrics)
    (time_bar)))


